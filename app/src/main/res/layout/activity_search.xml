<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:layout_marginBottom="70dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Main container using ConstraintLayout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".HomeScreen">

            <LinearLayout
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">
                <EditText
                    android:id="@+id/search_input"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:layout_margin="18dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="@color/white"
                    android:hint="  ðŸ”ï¸Ž Search"
                    android:textColorHint="@color/brown"/>
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/imageselect"
                    android:layout_margin="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/below_bar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/search_bar"
                android:weightSum="50"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="@color/white"
                    android:layout_margin="8dp"
                    android:text="ðŸ›ï¸ Shop"
                    android:textSize="15sp"
                    android:textColor="@color/brown"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="@color/white"
                    android:layout_margin="8dp"
                    android:text="Style"
                    android:textSize="17sp"
                    android:textColor="@color/brown"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="@color/white"
                    android:layout_margin="8dp"
                    android:text="Sports"
                    android:textSize="17sp"
                    android:textColor="@color/brown"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="@color/white"
                    android:layout_margin="8dp"
                    android:text="Auto"
                    android:textSize="17sp"
                    android:textColor="@color/brown"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="@color/white"
                    android:layout_margin="8dp"
                    android:text="Music"
                    android:textSize="17sp"
                    android:textColor="@color/brown"
                    android:gravity="center"/>


            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="680dp"
                app:layout_constraintTop_toBottomOf="@id/below_bar"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/search_results"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:orientation="vertical"/>

                <ImageView
                    android:id="@+id/image_1"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/image_1"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:layout_margin="5dp"/>

                <ImageView
                    android:id="@+id/image_2"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toBottomOf="@id/image_1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/image_2"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:layout_margin="5dp"/>

                <ImageView
                    android:id="@+id/image_3"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toBottomOf="@id/image_2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/image_3"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:layout_margin="5dp"/>

                <ImageView
                    android:id="@+id/image_4"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toBottomOf="@id/image_3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/image_4"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:layout_margin="5dp"/>

                <ImageView
                    android:id="@+id/image_5"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toBottomOf="@id/image_4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/image_5"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:layout_margin="5dp"/>

                <ImageView
                    android:id="@+id/image_6"
                    android:layout_width="260dp"
                    android:layout_height="265dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/image_1"
                    android:background="@drawable/image_6"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:layout_margin="5dp"/>

                <ImageView
                    android:id="@+id/image_7"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toBottomOf="@id/image_6"
                    app:layout_constraintLeft_toRightOf="@id/image_3"
                    android:background="@drawable/image_7"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:layout_margin="5dp"/>

                <ImageView
                    android:id="@+id/image_8"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toBottomOf="@id/image_7"
                    app:layout_constraintLeft_toRightOf="@id/image_4"
                    android:background="@drawable/image_8"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:layout_margin="5dp"/>

                <ImageView
                    android:id="@+id/image_9"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toBottomOf="@id/image_8"
                    app:layout_constraintLeft_toRightOf="@id/image_5"
                    android:background="@drawable/image_9"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:layout_margin="5dp"/>

                <ImageView
                    android:id="@+id/image_10"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toBottomOf="@id/image_6"
                    app:layout_constraintLeft_toRightOf="@id/image_7"
                    android:background="@drawable/image_10"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:layout_margin="5dp"/>

                <ImageView
                    android:id="@+id/image_11"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toBottomOf="@id/image_10"
                    app:layout_constraintLeft_toRightOf="@id/image_8"
                    android:background="@drawable/image_11"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:layout_margin="5dp"/>

                <ImageView
                    android:id="@+id/image_12"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toBottomOf="@id/image_11"
                    app:layout_constraintLeft_toRightOf="@id/image_9"
                    android:background="@drawable/image_12"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:layout_margin="5dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <!-- Bottom Navigation Bar, Always fixed at the bottom -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@drawable/feed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:weightSum="50"
        android:orientation="horizontal"
        android:scaleType="centerCrop"
        android:background="@color/white">
        <ImageButton
            android:id="@+id/tab_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/tab_1"
            android:background="@color/white"/>
        <ImageButton
            android:id="@+id/tab_2_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/tab_2_search_filled"
            android:background="@color/white"/>
        <ImageButton
            android:id="@+id/tab_3_plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/tab_3_plus"
            android:background="@color/white"/>
        <ImageButton
            android:id="@+id/tab_4_notification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/tab_4_notification"
            android:background="@color/white"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center">

            <ImageButton
                android:id="@+id/tab_5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle_profile_right_bottom"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:layout_gravity="center"/>
        </FrameLayout>




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>