<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="8dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="90dp">

        <!-- Story border circle -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/circlestory"
            android:scaleType="fitXY" />

        <!-- Actual story image (StoryAdapter expects this ID) -->
        <ImageView
            android:id="@+id/storyImageView"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="@drawable/circlestory"
            android:clipToOutline="true"/>
        
        <!-- Small profile image at bottom right -->
        <ImageView
            android:id="@+id/storyProfileImage"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="bottom|end"
            android:scaleType="centerCrop"
            android:background="@drawable/circle"
            android:clipToOutline="true"
            android:src="@drawable/ic_default_profile"/>
    </FrameLayout>

    <TextView
        android:id="@+id/storyUsername"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center"
        android:layout_marginTop="4dp"/>

</LinearLayout>

