<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Remote video view (full screen) -->
    <SurfaceView
        android:id="@+id/remoteVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/black" />

    <!-- Local video view (small overlay) -->
    <SurfaceView
        android:id="@+id/localVideoView"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:background="@color/black" />

    <!-- Top status bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_top"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/callTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Video Call"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/callStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:text="Connecting..."
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/callDurationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Bottom control panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="24dp">

        <!-- Mute button -->
        <ImageButton
            android:id="@+id/muteButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/call_button_background"
            android:src="@drawable/mic_on"
            android:contentDescription="Mute" />

        <!-- Video toggle button -->
        <ImageButton
            android:id="@+id/videoButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/call_button_background"
            android:src="@drawable/video_on"
            android:contentDescription="Video" />

        <!-- End call button -->
        <ImageButton
            android:id="@+id/endCallButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:background="@drawable/end_call_button_background"
            android:src="@drawable/end_call"
            android:contentDescription="End Call" />

        <!-- Speaker button -->
        <ImageButton
            android:id="@+id/speakerButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/call_button_background"
            android:src="@drawable/speaker_on"
            android:contentDescription="Speaker" />

        <!-- Switch camera button -->
        <ImageButton
            android:id="@+id/switchCameraButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/call_button_background"
            android:src="@drawable/switch_camera"
            android:contentDescription="Switch Camera" />

    </LinearLayout>

</RelativeLayout>
