<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/story_1">
    <Button
        android:id="@+id/storyEnd"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/story_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/linewhite"
        android:layout_margin="16dp"
        android:background="@color/dark_grey"
        android:scaleType="fitStart"/>

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/story_line"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        android:background="@drawable/circle"
        android:src="@drawable/sofia_martinez"
        android:clipToOutline="true"
        android:scaleType="fitXY"
        android:backgroundTint="@color/grey"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintTop_toBottomOf="@id/story_line"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Sof"
        android:textColor="@color/white"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/story_line"
        android:layout_margin="16dp"
        android:text="13h"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/story_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Story image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"/>

    <TextView
        android:id="@+id/x_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="x"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/userstoryview_bar"
        android:scaleType="fitXY"/>
</androidx.constraintlayout.widget.ConstraintLayout>