<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp">

                <!-- Profile Image (loaded dynamically) -->
                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clipToOutline="true"
                    android:src="@drawable/ic_default_profile"
                    android:background="@drawable/circle"
                    android:scaleType="centerCrop"/>

            </FrameLayout>


            <!-- Company Name Text -->
            <TextView
                android:id="@+id/personNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <!-- Spacer to push icons to the right -->
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Voice Call button -->
            <ImageButton
                android:id="@+id/voiceCallBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/mic_on"
                android:layout_marginRight="8dp"
                android:contentDescription="Voice Call"
                android:scaleType="fitXY"
                android:background="@color/transparent"/>

            <!-- Video Call button -->
            <ImageButton
                android:id="@+id/videoCallBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/video_on"
                android:layout_marginRight="8dp"
                android:contentDescription="Video Call"
                android:scaleType="fitXY"
                android:background="@color/transparent"/>
        </LinearLayout>


    </LinearLayout>

    <!-- Messages RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottom_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_search"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rounded_button_more"
        android:backgroundTint="@color/grey"
        android:layout_margin="10dp">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="8dp"
            android:layout_gravity="start|center_vertical"
            android:background="@drawable/circle"
            android:backgroundTint="@color/brown">

            <ImageView
                android:id="@+id/btnCamera"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/camerawhitefilled"/>
        </FrameLayout>


        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/camera"
            app:layout_constraintRight_toLeftOf="@id/sendButton"
            android:hint="Message..."
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:background="@color/transparent"/>

        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            android:src="@drawable/share_small"
            android:background="@drawable/circle"
            android:backgroundTint="@color/brown"
            android:contentDescription="Send Message"
            android:elevation="4dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

